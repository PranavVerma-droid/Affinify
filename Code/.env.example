# Affinify Configuration File
# This is the ONLY configuration file for the entire application
# Copy this to .env and modify values as needed

# ============================================================================
# PROJECT INFORMATION
# ============================================================================
PROJECT_NAME=Affinify
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION=AI-Powered Protein-Ligand Binding Affinity Predictor
PROJECT_AUTHORS=Pranav Verma,Ekaksh Goyal

# ============================================================================
# PATHS AND DIRECTORIES
# ============================================================================
DATA_DIR=data
MODELS_DIR=models
RESULTS_DIR=results
LOGS_DIR=logs
CONFIG_DIR=config
VIDEOS_DIR=videos
DATABASE_PATH=data/affinity_database.db

# ============================================================================
# DATA PROCESSING CONFIGURATION
# ============================================================================
# Default sample size for processing
DATA_SAMPLE_SIZE=5000
# Test set proportion (0.1-0.5)
DATA_TEST_SIZE=0.2
# Random state for reproducibility
DATA_RANDOM_STATE=42
# Min/Max binding affinity values for filtering
DATA_MIN_BINDING_AFFINITY=0.1
DATA_MAX_BINDING_AFFINITY=100000
# Maximum rows to process from BindingDB
DATA_MAX_ROWS=50000

# Data source URLs
DATA_BINDINGDB_URL=https://www.bindingdb.org/rwd/bind/downloads/BindingDB_All_202507_tsv.zip
DATA_CHEMBL_BASE_URL=https://www.ebi.ac.uk/chembl/api/data/
DATA_PDB_BASE_URL=https://files.rcsb.org/download/

# Data source settings
DATA_BINDINGDB_ENABLED=true
DATA_SAMPLE_ENABLED=true

# ============================================================================
# MACHINE LEARNING MODEL CONFIGURATION
# ============================================================================

# Random Forest Parameters
MODEL_RF_ENABLED=true
MODEL_RF_N_ESTIMATORS=300
MODEL_RF_MAX_DEPTH=25
MODEL_RF_MIN_SAMPLES_SPLIT=5
MODEL_RF_MIN_SAMPLES_LEAF=2
MODEL_RF_MAX_FEATURES=sqrt
MODEL_RF_BOOTSTRAP=true
MODEL_RF_RANDOM_STATE=42
MODEL_RF_N_JOBS=-1

# XGBoost Parameters
MODEL_XGB_ENABLED=true
MODEL_XGB_N_ESTIMATORS=100
MODEL_XGB_MAX_DEPTH=6
MODEL_XGB_LEARNING_RATE=0.1
MODEL_XGB_SUBSAMPLE=0.8
MODEL_XGB_COLSAMPLE_BYTREE=0.8
MODEL_XGB_RANDOM_STATE=42

# Neural Network Parameters
MODEL_NN_ENABLED=true
MODEL_NN_HIDDEN_LAYERS=128,64,32
MODEL_NN_DROPOUT_RATE=0.2
MODEL_NN_LEARNING_RATE=0.001
MODEL_NN_BATCH_SIZE=32
MODEL_NN_EPOCHS=100
MODEL_NN_RANDOM_STATE=42

# Model files
MODEL_RF_FILE=enhanced_randomforest_model.pkl
MODEL_XGB_FILE=xgboost_model.pkl
MODEL_NN_FILE=nn_model.h5

# ============================================================================
# FEATURE EXTRACTION CONFIGURATION
# ============================================================================
# Molecular descriptors to calculate
FEATURES_MOLECULAR_BASIC=true
FEATURES_MOLECULAR_TOPOLOGICAL=true
FEATURES_MOLECULAR_ELECTRONIC=true
FEATURES_MOLECULAR_GEOMETRIC=true

# Protein features
FEATURES_PROTEIN_SEQUENCE=true
FEATURES_PROTEIN_STRUCTURAL=true
FEATURES_PROTEIN_BINDING_SITE=true

# Interaction features
FEATURES_INTERACTION_MOLECULAR_PROTEIN=true
FEATURES_INTERACTION_BINDING_MODE=true

# Standard molecular descriptors list
MOLECULAR_DESCRIPTORS=MolWt,LogP,HBD,HBA,TPSA,NumRotatableBonds,NumAromaticRings,NumSaturatedRings,NumAliphaticRings,FractionCsp3,HeavyAtomCount,NumHeteroatoms

# ============================================================================
# VISUALIZATION AND ANIMATION CONFIGURATION
# ============================================================================
# Plot settings
VIZ_PLOT_STYLE=default
VIZ_FIGURE_WIDTH=10
VIZ_FIGURE_HEIGHT=8
VIZ_DPI=300
VIZ_SAVE_FORMAT=png

# Molecular viewer settings
VIZ_MOLECULAR_WIDTH=400
VIZ_MOLECULAR_HEIGHT=400
VIZ_MOLECULAR_STYLE=stick

# Animation settings
ANIMATION_FPS=15
ANIMATION_DURATION=8
ANIMATION_OUTPUT_DIR=videos

# Color scheme
VIZ_COLOR_PROTEIN=#2E86AB
VIZ_COLOR_LIGAND=#A23B72
VIZ_COLOR_BINDING_SITE=#F18F01

# Atom colors (CPK coloring)
ATOM_COLOR_C=#606060
ATOM_COLOR_O=#FF0D0D
ATOM_COLOR_N=#0000FF
ATOM_COLOR_H=#CCCCCC
ATOM_COLOR_S=#FFFF30
ATOM_COLOR_P=#FF8000
ATOM_COLOR_F=#90E050
ATOM_COLOR_CL=#1FF01F
ATOM_COLOR_BR=#A62929
ATOM_COLOR_I=#940094
ATOM_COLOR_DEFAULT=#FFC0CB

# ============================================================================
# PERFORMANCE TARGETS
# ============================================================================
PERFORMANCE_TARGET_R2=0.7
PERFORMANCE_TARGET_RMSE=1.0
PERFORMANCE_MAX_PREDICTION_TIME=5.0
PERFORMANCE_CV_FOLDS=5

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/affinify.log

# ============================================================================
# STREAMLIT APPLICATION CONFIGURATION
# ============================================================================
STREAMLIT_PAGE_TITLE=Affinify - AI-Powered Protein-Ligand Binding Affinity Predictor
STREAMLIT_PAGE_ICON=ðŸ§¬
STREAMLIT_LAYOUT=wide
STREAMLIT_SIDEBAR_STATE=expanded

# ============================================================================
# OLLAMA AI INTEGRATION
# ============================================================================
OLLAMA_ENABLED=true
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=pranavverma/Affinify-AI:3b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=1000
OLLAMA_TIMEOUT=30
OLLAMA_CHAT_TITLE=ðŸ¤– Affinify Assistant
OLLAMA_WELCOME_MESSAGE=Hello! I'm your Affinify Assistant. I can help you with questions about protein-ligand binding, machine learning models, data processing, and using this platform. What would you like to know?
OLLAMA_ERROR_MESSAGE=I'm having trouble connecting to the AI model. Please check if Ollama is running and try again.
OLLAMA_SYSTEM_PROMPT=You are Affinify Assistant, an AI helper for the Affinify protein-ligand binding affinity prediction platform. You help users with questions about molecular modeling, machine learning, data processing, and using the Affinify system. Be helpful, concise, and scientifically accurate.

# ============================================================================
# COMMAND LINE INTERFACE DEFAULTS
# ============================================================================
CLI_DEFAULT_MODELS=RandomForest,XGBoost
CLI_DEFAULT_DATA_SOURCE=auto
CLI_FORCE_REPROCESS=false
